@model Auction.BLL.ViewModels.ResetPasswordModel


<div>
    @ViewBag.Msg
</div>


<div id="passwordArea">

    @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post))
    {

        <div class="row form-group">
            @Html.Label("Код для скидання", "Код: ", new { @class = "col-sm-1" })
            <div class="col">
                @Html.TextBox("Token","", new { @class = "form-control" })
            </div>
        </div>
        <div class="row form-group">
            @Html.LabelFor(m => m.Email, "Email: ", new { @class = "col-sm-1" })
            <div class="col">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                <small>
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </small>
            </div>
        </div>
        <div class="row form-group">
            @Html.LabelFor(m => m.Password, "Пароль: ", new { @class = "col-sm-1" })
            <div class="col">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                <small>
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </small>
            </div>
        </div>
        <input type="submit" value="Enter" class="btn btn-info" />
    }

</div>



