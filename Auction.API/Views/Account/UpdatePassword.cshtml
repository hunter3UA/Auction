
<div id="passwordArea">

    @using (Html.BeginForm("UpdatePassword", "Account", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <p>Старий пароль:<input type="password" name="oldPassword" /></p>
        <p>Новий пароль:<input type="password" name="newPassword" /></p>
        <input type="submit" value="Оновити пароль" />
    }

</div>

<div id="validate">
    @ViewBag.Msg
</div>

@section scripts{
    <script>

       
       
        let btn = document.querySelector("[type=submit]");

        btn.addEventListener('click', function (e) {
            let newPassword = document.querySelector("[name=newPassword]");
            if (newPassword.value.length < 8) {
                e.preventDefault();
                let validate = document.querySelector("#validate");
                validate.innerHTML = "Мінімальна довжина пароля 8";
            }
          
          



        });

    </script>    
    
    
    
} 